<Window x:Class="ExamProject.DebugWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ExamProject"
		mc:Ignorable="d"
		Title="JSON Data Debugger" Height="600" Width="1000">
	<DockPanel LastChildFill="True">
		<!-- TreeView -->
		<TreeView 
	Name="TreeView" 
	DockPanel.Dock="Left" 
	Width="250" 
	Margin="5"
	SelectedItemChanged="TreeView_SelectedItemChanged">
			<TreeView.ItemContainerStyle>
				<Style TargetType="{x:Type TreeViewItem}">
					<Setter Property="IsExpanded" Value="True"/>
				</Style>
			</TreeView.ItemContainerStyle>
		</TreeView>

		<!-- Command Terminal -->
		<GroupBox DockPanel.Dock="Bottom" Header="Command Terminal" Margin="5">
			<Grid>
				<TextBox Name="CommandInput"
					TextChanged="CommandInput_TextChanged"
					Background="Black"
					Foreground="White"
					Grid.Column="0"
					Margin="5"
					Padding="5"
					AcceptsReturn="True"/>
				<ListBox Name="CommandHistory"
					Background="Black"
					Foreground="White"
					Grid.Column="1"
					Margin="5"
					Padding="5"/>
			</Grid>
		</GroupBox>

		<!-- Data Grid -->
		<DataGrid Name="DataGrid"
			ItemsSource="{Binding JsonData}"
			Margin="10"/>
	</DockPanel>
</Window>