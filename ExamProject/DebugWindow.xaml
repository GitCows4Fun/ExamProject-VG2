<Window x:Class="ExamProject.DebugWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ExamProject"
		mc:Ignorable="d"
		Title="Admin Window" MinHeight="600" MinWidth="1000">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<!-- TreeView -->
		<TreeView 
			Name="TreeView"
			Grid.Column="0"
			Margin="5">
			<TreeView.ItemContainerStyle>
				<Style TargetType="{x:Type TreeViewItem}">
					<Setter Property="IsExpanded" Value="True"/>
				</Style>
			</TreeView.ItemContainerStyle>
		</TreeView>
		<!-- GridSplitter for resizing -->
		<GridSplitter
			Grid.Column="1"
			Width="10"
			HorizontalAlignment="Stretch"
			Background="White"
			Cursor="SizeWE" />
		<!-- Command Terminal -->
		<GroupBox Grid.Column="2" Header="Command Terminal" Margin="5" MinWidth="300">
			<Grid>
				<ListBox Name="CommandHistory"
						Background="Black"
						Foreground="White"
						Grid.Column="1"
						Margin="5"
						Padding="5"/>
				<TextBox Name="CommandInput"
						TextChanged="CommandInput_TextChanged"
						Background="Black"
						Foreground="White"
						Grid.Column="0"
						Margin="5"
						Padding="5"
						AcceptsReturn="True"/>
			</Grid>
		</GroupBox>
	</Grid>
</Window>