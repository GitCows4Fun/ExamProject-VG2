<Window x:Class="ExamProject.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<!-- Sidebar -->
			<ColumnDefinition Width="*"/>
			<!-- Content Area -->
		</Grid.ColumnDefinitions>

		<!-- Sidebar with Buttons -->
		<StackPanel Grid.Column="0">

			<!-- Sidebar-Buttons -->
			<!-- Money -->
			<Button Content="Money" Click="Btn_Money" Height="30"/>
            <!-- MultiVal -->
            <Button Content="Multipliers"  Height="30"/>
            <!-- RPVal -->
            <Button Content="Rebirths"  Height="30"/>
            <!-- PPVal -->
            <Button Content="Prestiges"  Height="30"/>
            <!-- APVal -->
            <Button Content="Ascensions"  Height="30"/>
            <!-- SacVal -->
            <Button Content="Sacrifices"  Height="30"/>
            <!-- DietiyVal -->
            <Button Content="Deities"  Height="30"/>
            <!-- SaintsVal -->
            <Button Content="Saints"  Height="30"/>
            <!-- General Stats -->
            <Button Content="General Stats"  Height="30"/>

			<!-- Stat_Stackpanels -->
			<StackPanel Height="156" Orientation="Horizontal">
				<StackPanel Height="100"/>
				
				<!-- Stat_Lables -->
				<StackPanel Width="100">
					<Label Content="Money       :"/>
					<Label Content="Multiplier  :"/>
					<Label Content="Rebirths    :"/>
					<Label Content="Prestiges   :"/>
					<Label Content="Ascensions  :"/>
					<Label Content="Sacrifices  :"/>
				</StackPanel>
				<!-- Stat_Values -->
				<StackPanel Width="100">
					<Label Content="{Binding MonValue}"/>
					<Label Content="{Binding MultiValue}"/>
					<Label Content="{Binding RPValue}"/>
					<Label Content="{Binding PPValue}"/>
					<Label Content="{Binding APValue}"/>
					<Label Content="{Binding SacValue}"/>
				</StackPanel>


			</StackPanel>

			<!-- Labels For Sidebar-Buttons -->
		</StackPanel>

		<!-- Dynamic Content Area -->
		<Grid x:Name="content" Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="209*"/>
				<RowDefinition Height="8*"/>
			</Grid.RowDefinitions>
        </Grid>
	</Grid>
</Window>
